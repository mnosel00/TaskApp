@model List<TaskApp.Models.TaskGroup>
@using System.Linq;

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="CreateUserTask">Create New UserTask</a>
</p>



<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>NumberOfTasks</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NameOfTaskGroup)</td>
               
                <td>@Html.DisplayFor(modelItem => item.Licznik)</td>
                <td>
                 <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
            </tr>
        }
    </tbody>

</table>

